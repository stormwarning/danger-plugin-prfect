{
  "name": "danger-plugin-prfect",
  "version": "0.0.1",
  "description": "Enforce guidelines for high-quality pull requests.",
  "keywords": [
    "danger",
    "danger-plugin",
    "pr",
    "pull request"
  ],
  "homepage": "https://github.com/stormwarning/danger-plugin-prfect",
  "repository": "stormwarning/danger-plugin-prfect",
  "license": "ISC",
  "author": "Jeff Nelson (https://tidaltheory.io)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run setup && esbuild src/index.ts --bundle --platform=node --target=node16 --outfile=dist/index.js",
    "postbuild": "tsc --declaration --emitDeclarationOnly",
    "changeset": "changeset add",
    "predocs": "rm -rf docs/",
    "docs": "esdoc -c .esdoc.json",
    "format": "prettier --write",
    "lint": "eslint --fix",
    "prepare": "husky install",
    "prepublish": "npm run build",
    "release": "npm run build && changeset publish",
    "setup": "zazen configure",
    "test": "ava src/__tests__"
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": "eslint --fix"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "esbuild-register"
    ]
  },
  "dependencies": {
    "compromise": "13.11.4",
    "danger": "*"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.2",
    "@changesets/cli": "2.20.0",
    "@zazen/cli": "0.3.2",
    "ava": "4.0.1",
    "esbuild": "0.14.21",
    "esbuild-register": "3.3.2",
    "eslint": "8.8.0",
    "husky": "7.0.4",
    "lint-staged": "12.3.3",
    "prettier": "2.5.1",
    "prettier-plugin-packagejson": "2.2.15",
    "typescript": "4.5.5"
  },
  "optionalDependencies": {
    "esdoc": "^0.5.2"
  },
  "engines": {
    "node": ">=16"
  }
}
